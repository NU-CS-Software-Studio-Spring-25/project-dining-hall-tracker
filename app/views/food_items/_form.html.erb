<%= form_with(model: food_item, local: true) do |form| %>
    <% if food_item.errors.any? %>
      <div class="alert alert-danger">
        <h2><%= pluralize(food_item.errors.count, "error") %> prohibited this food_item from being saved:</h2>
        <ul>
          <% food_item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="form-group mb-3">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  
    <div class="form-group mb-3">
      <%= form.label :protein, class: 'form-label' %>
      <%= form.number_field :protein, step: :any, class: 'form-control' %>
    </div>
  
    <div class="form-group mb-3">
      <%= form.label :dining_hall, class: 'form-label' %>
      <%= form.text_field :dining_hall, class: 'form-control' %>
    </div>
  
    <div class="form-group mb-3">
      <%= form.label :meal_time, class: 'form-label' %>
      <%= form.select :meal_time, ['Breakfast', 'Lunch', 'Dinner'], {}, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>