<div class="container mt-4">
<h1>Dining Hall Food Items</h1>

<%= link_to 'New Food Item', new_food_item_path, class: 'btn btn-primary mb-3' %>

<h2 class="mt-4">High Protein Options Testing</h2>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Protein (g)</th>
        <th>Dining Hall</th>
        <th>Meal Time</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @high_protein_items.each do |food_item| %>
        <tr>
          <td><%= food_item.name %></td>
          <td><%= food_item.protein %></td>
          <td><%= food_item.dining_hall %></td>
          <td><%= food_item.meal_time %></td>
          <td><%= link_to 'Show', food_item, class: 'btn btn-info btn-sm' %></td>
          <td><%= link_to 'Edit', edit_food_item_path(food_item), class: 'btn btn-warning btn-sm' %></td>
          <td>
          <form action="/food_items/<%= food_item.id %>" method="post">
            <input type="hidden" name="_method" value="delete">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <input type="submit" value="Delete" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">
          </form>
        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

