<div class="container mt-4">
<div class="card">
  <div class="card-header">
    <h1 class="card-title"><%= @food_item.name %></h1>
  </div>
  <div class="card-body">
    <p>
      <strong>Protein:</strong>
      <%= @food_item.protein %>g
    </p>

    <p>
      <strong>Dining Hall:</strong>
      <%= @food_item.dining_hall %>
    </p>

    <p>
      <strong>Meal Time:</strong>
      <%= @food_item.meal_time %>
    </p>

    <%= link_to 'Edit', edit_food_item_path(@food_item), class: 'btn btn-warning' %>
    <%= link_to 'Back', food_items_path, class: 'btn btn-secondary' %>
  </div>
</div>
</div>