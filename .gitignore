# Rails backend
/backend/log/*
/backend/tmp/*
!/backend/log/.keep
!/backend/tmp/.keep

# Ignore all logfiles and tempfiles for /test and /spec.
/backend/test/tmp/*
/backend/test/version_tmp/*
/backend/tmp/*
/backend/temp/*

# Ignore pidfiles, but keep the directory.
/backend/tmp/pids/*
!/backend/tmp/pids/
!/backend/tmp/pids/.keep

# Ignore uploaded files in development.
/backend/storage/*
!/backend/storage/.keep
/backend/tmp/storage/*
!/backend/tmp/storage/
!/backend/tmp/storage/.keep

# Ignore master key for decrypting credentials and more.
/backend/config/master.key
/backend/config/credentials/*.key

# Ignore database files
/backend/db/*.sqlite3
/backend/db/*.sqlite3-*
/backend/db/*.sqlite3-journal

# Ignore all environment files
/backend/.env
/backend/.env.*

# Ignore node modules and build files
/backend/node_modules
/backend/public/packs
/backend/public/packs-test
/backend/public/assets
/backend/yarn-error.log
/backend/yarn-debug.log*
/backend/.byebug_history

